<script>
	$(function(){
		var token = $('meta[name="csrf-token"]').attr('content');
		var form_token = $('input[name="authenticity_token"]');
		form_token.val(token);
		//console.log(form_token.val());
		$.ajax({
			method: "POST",
			url: "/products",
			data: {
				name: "Michael",
				description: "Taiwan, Hsinchu",
				image_url: "index-owl.jpg",
				price: 599,
				authenticity_token: token
			}
		})
	})
</script>

