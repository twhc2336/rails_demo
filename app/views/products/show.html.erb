<%= form_tag "/products/#{@product.id}", method: :GET do %>
<div class="container">
	<div class="row">
		<div class="col-sm-4">
			<div class="form-group">
				<label>名稱</label>
				<p><%= @product.name %></p>
			</div>
			<div class="form-group">
				<label>敘述</label>
				<p><%= @product.description %></p>
			</div>
			<div class="form-group">
				<label>價錢</label>
				<p><%= @product.price %></p>
			</div>
			<div class="form-group">
				<label>類別</label>
				<p><%= @product.subcategory.name_wtih_category %></p>
			</div>
		</div>
		<div class="col-sm-8">
			<div class="form-group">
				<%= image_tag @product.image_url, alt: @product.name %>
			</div>
		</div>
	</div>
	<%#= link_to 'Edit', edit_product_path(@product,page: @page), class: "btn btn-primary" %>
	<%#= link_to 'Back', products_path(page: params[:page]), class: "btn btn-primary" %>
	<%= link_to 'Back', products_path, class: "btn btn-primary" %>

	<div style="display:none">
		<%= check_box_tag(:pet_dog) %>
		<%= label_tag(:pet_dog, "I own a dog") %>
		<%= check_box_tag(:pet_cat) %>
		<%= label_tag(:pet_cat, "I own a cat") %>
		<br/>
		<%= radio_button_tag(:age, "child") %>
		<%= label_tag(:age_child, "I am younger than 21") %>
		<%= radio_button_tag(:age, "adult") %>
		<%= label_tag(:age_adult, "I'm over 21") %>
	</div>
</div>
<% end %>


<br/>
