<%= form_tag "/products/#{@product.id}", method: :GET do %>
<div class="container">
	<div class="row">
		<div class="col-sm-4">
			<div class="form-group">
				<label>名稱</label>
				<p><%= @product.name %></p>
			</div>
			<div class="form-group">
				<label>敘述</label>
				<p><%= @product.description %></p>
			</div>
			<div class="form-group">
				<label>價錢</label>
				<p><%= @product.price %></p>
			</div>

		</div>
		<div class="col-sm-8">
			<div class="form-group">
				<%= image_tag @product.image_url, alt: @product.name %>
			</div>
		</div>
	</div>
	<%= link_to 'Back', products_path, class: "btn btn-primary" %>
</div>
<% end %>
<br/>